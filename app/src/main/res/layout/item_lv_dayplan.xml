<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/selley_lv"
   >
    <RelativeLayout
        android:id="@+id/dayplan_date_rl"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:id="@+id/tv_lv_dayplan_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="计划日期"
            />
        <ImageView
            android:id="@+id/img_lv_dayplan_date"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerVertical="true"
            android:src="@mipmap/my_sumao_iv_order"/>
        <TextView
            android:id="@+id/tv_lv_dayplan_date_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="sfd"
            android:layout_toLeftOf="@id/img_lv_dayplan_date"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="#ff0000"
            android:layout_centerInParent="true"
            android:visibility="visible"
            />
        <ImageView
            android:id="@+id/delete_iv"
            android:layout_toLeftOf="@id/tv_delete"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x5"
            android:visibility="gone"
            android:src="@mipmap/shangyoudelete"/>
    </RelativeLayout>

</LinearLayout>
