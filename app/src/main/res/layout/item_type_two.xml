<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x90">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_name_type_two"
        android:text="燕山石化7042"
        android:textSize="15sp"
        android:textColor="#000"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginLeft="@dimen/x10"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_number_type_two"
        android:layout_marginTop="@dimen/x6"
        android:layout_marginLeft="@dimen/x5"
        android:layout_toRightOf="@+id/tv_name_type_two"
        />
    <TextView
        android:id="@+id/tv_price_type_two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:textColor="#EE262E"
        android:textStyle="bold"
        android:text="1000"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/x10"
        android:textColor="#EE262E"
        android:textStyle="bold"
        android:text="￥"
        android:layout_toLeftOf="@+id/tv_price_type_two"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#EFEEF4"
        android:layout_below="@+id/tv_price_type_two"
        android:layout_marginTop="@dimen/x3"
        android:id="@+id/type_line"
        android:orientation="horizontal"
        ></LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginLeft="@dimen/x10"
        android:id="@+id/tv_address_type_name"
        android:textSize="14sp"
        android:layout_below="@+id/type_line"
        android:text="公司:"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x12"
        android:layout_marginLeft="@dimen/x3"
        android:id="@+id/tv_address_type_two"
        android:textSize="14sp"
        android:layout_toRightOf="@+id/tv_address_type_name"
        android:layout_below="@+id/type_line"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x10"
        android:id="@+id/tv_state_type_two"
        android:layout_below="@+id/type_line"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x3"
        android:id="@+id/tv_cangku_name"
        android:layout_below="@+id/tv_address_type_two"
        android:layout_marginLeft="@dimen/x10"
        android:text="仓库:"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x3"
        android:id="@+id/tv_cangku_type_two"
        android:layout_below="@+id/tv_address_type_two"
        android:layout_marginLeft="@dimen/x3"
        android:layout_toRightOf="@+id/tv_cangku_name"
        android:layout_marginBottom="@dimen/x10"
        />

</RelativeLayout>
