<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp">
        <TextView
            android:id="@+id/tv_item_sale_search_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="title"
            android:textSize="16sp"
            android:textColor="#000"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/tv_left_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="产品编号 : "/>
        <TextView
            android:id="@+id/tv_item_sale_search_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:layout_toRightOf="@id/tv_left_num"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_right_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类 : "
            android:layout_marginLeft="210dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_item_sale_search_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_right_sort"
            android:text="23"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/tv_left_qiye_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="生产企业 : "/>
        <TextView
            android:id="@+id/tv_item_sale_search_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:layout_toRightOf="@id/tv_left_qiye_name"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_right_pai_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="牌号 : "
            android:layout_marginLeft="210dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_item_sale_search_pai_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_right_pai_num"
            android:text="23"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/tv_left_product_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="产品单价 : "/>
        <TextView
            android:id="@+id/tv_item_sale_search_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:layout_toRightOf="@id/tv_left_product_price"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_right_sheng_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="剩余数量 : "
            android:layout_marginLeft="210dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_item_sale_search_sheng_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_right_sheng_num"
            android:text="23"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <TextView
            android:id="@+id/tv_left_cangku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:text="仓库 : "/>
        <TextView
            android:id="@+id/tv_item_sale_search_cangku_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"
            android:layout_toRightOf="@id/tv_left_cangku"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="@color/selley_bg"/>
</LinearLayout>
