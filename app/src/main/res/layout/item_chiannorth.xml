<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:id="@+id/tv_itemchinanorth_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="数量的款到发货空间"
            />
        <Button
            android:id="@+id/btn_itemchiannorth"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/x30"
            android:layout_marginTop="@dimen/x5"
            android:layout_centerVertical="true"
            android:background="@drawable/chinanorth"
            android:layout_alignParentRight="true"
            android:focusable="false"
            android:text="我要点价"
            android:textColor="@color/selley_lv"
            android:layout_marginRight="@dimen/x20"
          />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/zixun_line"
        android:layout_margin="@dimen/x3"
        ></View>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/tv_itemchinanorth_yewuyuan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="业务员 : "/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_itemchinanorth_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="张三四"
            android:layout_toRightOf="@id/tv_itemchinanorth_yewuyuan"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_itemchiannorth_tel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_itemchinanorth_name"
            android:layout_marginLeft="@dimen/x25"
            android:text="联系电话 : "/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_itemchiannorth_tel"
            android:id="@+id/tv_itemchinanorth_telnum"
            android:text="124325432523"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>
</LinearLayout>
