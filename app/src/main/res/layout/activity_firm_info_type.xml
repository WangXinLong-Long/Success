<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEF3"
    tools:context=".fragments.myPlasticTrade.companyInformations.firmInfomation.FirmInfoTypeActivity">
<include
    android:id="@+id/layoutTop_firm_info_type"
    layout="@layout/title_bar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:layout_marginTop="@dimen/x5"
        android:orientation="vertical"
        >
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rgDemo"
            android:orientation="vertical"
            android:checkedButton="@+id/rbone_firm_info_type"
            >

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:id="@+id/rbone_firm_info_type"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/x10"
                />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEF3"

            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            ></LinearLayout>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:id="@+id/rbtwo_firm_info_type"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:layout_marginBottom="@dimen/x10"
                android:textSize="16sp"
                />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#EEEEF3"

            android:layout_marginLeft="@dimen/x10"
            android:layout_marginRight="@dimen/x10"

            ></LinearLayout>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x20"
                android:id="@+id/rbthree_firm_info_type"
                android:layout_marginTop="@dimen/x10"
                android:layout_marginLeft="@dimen/x10"
                android:textSize="16sp"
                android:layout_marginBottom="@dimen/x10"

                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#EEEEF3"

                android:layout_marginLeft="@dimen/x10"
                android:layout_marginRight="@dimen/x10"
                android:id="@+id/three"
                android:orientation="horizontal"
                ></LinearLayout>


        </RadioGroup>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginTop="@dimen/x10"
        android:background="@drawable/button_background_blue"
        android:textColor="#fff"
        android:textSize="16sp"
        android:text="保存"
        android:id="@+id/btSave"

        />

</LinearLayout>
