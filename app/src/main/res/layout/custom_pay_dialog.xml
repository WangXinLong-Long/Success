<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/dialog_background"
            android:gravity="center"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/custom_pay_dialog_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_pay_title"
                android:text="@string/order_payment"
                android:paddingTop="@dimen/x5"
                android:paddingBottom="@dimen/x5"
                android:paddingRight="@dimen/x20"
                android:paddingLeft="@dimen/x20"
                android:textColor="@color/white"
                android:gravity="center"
                />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/white"
            >
            <ImageView
                android:id="@+id/custom_pay_dialog_image"
                android:layout_width="@dimen/x20"
                android:layout_height="@dimen/x20"
                android:src="@mipmap/bg_one"
                android:layout_marginTop="@dimen/x5"
                android:layout_marginBottom="@dimen/x5"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/custom_pay_dialog_text"
                android:layout_below="@id/custom_pay_dialog_image"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/payment_success"
                android:layout_centerHorizontal="true"
                />
            <RelativeLayout
                android:id="@+id/order_number_rl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/x15"
                android:layout_marginBottom="@dimen/x15"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/custom_pay_dialog_text">
                <TextView
                    android:id="@+id/order_number_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="产品订单号："/>
                <TextView
                    android:id="@+id/order_number_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/common_top_bar_blue"
                    android:layout_toRightOf="@id/order_number_tv"
                    />
                <TextView
                    android:id="@+id/pay_success"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="支付成功！"
                    android:layout_toRightOf="@id/order_number_number"
                    android:layout_marginLeft="@dimen/x5"
                    />
            </RelativeLayout>
        </RelativeLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_pay_bottom"
                android:gravity="center"
                >
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="@dimen/x5"
                    android:paddingBottom="@dimen/x5">


                <Button
                    android:id="@+id/my_order"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x30"
                    android:text="我的订单"
                    android:background="@drawable/button_background_blue"
                    android:layout_centerVertical="true"
                    />
                <Button
                    android:id="@+id/logistics_demand"
                    android:layout_width="@dimen/x50"
                    android:layout_height="@dimen/x30"
                    android:text="物流需求"
                    android:layout_toRightOf="@id/my_order"
                    android:background="@drawable/button_background_green"
                    android:layout_marginLeft="@dimen/x10"
                    />
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
</LinearLayout>