<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selley_bg"
    tools:context="com.silianchuangye.sumao.success.fragments.SellerManagementPlatform.SellerOrderManagement.PayMessage">
    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/zixun_topbg"
        >
        <ImageView
            android:id="@+id/img_logistics_title_bar_back"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"/>
        <TextView
            android:id="@+id/tv_customer_manager_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="支付信息"
            android:textColor="@color/selley_lv"
            android:layout_centerInParent="true"
            />

    </RelativeLayout>
    <ListView
        android:id="@+id/lv_fapiao_message"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selley_lv"
        android:layout_below="@id/relative_top"></ListView>
</RelativeLayout>
