<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x38"
    android:layout_marginBottom="@dimen/x10"
    >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="分类:"
        android:layout_marginLeft="@dimen/x20"
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/tv_order_goods"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="兰州石化7042"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginTop="@dimen/x10"
        android:id="@+id/tv_order_goods_type"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/tv_order_goods"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品名称:"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x30"
        android:id="@+id/tv_order_production"
        android:layout_toRightOf="@+id/tv_order_goods_type"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="中石油"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginLeft="@dimen/x5"
        android:id="@+id/tv_order_productionName"
        android:layout_toRightOf="@+id/tv_order_production"
        android:layout_centerVertical="true"
        />

</RelativeLayout>
