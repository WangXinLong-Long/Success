<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".customermanger.CustomerManager"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/zixun_topbg"
        >
        <ImageView
            android:id="@+id/img_logistics_title_bar_back"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="创建物流需求"
            android:textSize="18sp"
            android:textColor="@color/selley_lv"
            android:layout_centerInParent="true"
            />
        <ImageView
            android:id="@+id/img_logistics_title_bar_search"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerVertical="true"
            android:textColor="@color/selley_lv"
            android:src="@mipmap/search"
            android:textSize="16sp"/>
    </RelativeLayout>
    <android.support.design.widget.TabLayout
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="@dimen/y30"
        android:id="@+id/tlDemo_OrderPrice_activity"
        app:tabSelectedTextColor="#28ABE3"
        app:tabIndicatorColor="#28ABE3"
        android:layout_below="@+id/orderPrice_layout_top"
        ></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tlDemo_OrderPrice_activity"
        android:id="@+id/vpDemo_OrderPrice_activity"
        ></android.support.v4.view.ViewPager>
</LinearLayout>
