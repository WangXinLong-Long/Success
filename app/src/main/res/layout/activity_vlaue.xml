<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context=".fragments.homepage.auction.VlaueActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:id="@+id/layoutTop_value"
        android:background="#29ABE2"
        >
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:src="@mipmap/back"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/ivBack_value"
            />
        <TextView
            android:id="@+id/tv_Value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易规则"
            android:layout_marginTop="@dimen/x10"
            android:textSize="18sp"
            android:textColor="#fff"
            android:layout_centerHorizontal="true"
            />

    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/tv_value_content"
        android:text="aa"
        android:layout_below="@id/layoutTop_value"
        />
</RelativeLayout>
