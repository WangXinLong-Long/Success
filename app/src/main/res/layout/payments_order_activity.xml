<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/my_sumao_background">

    <include
        android:id="@+id/title_payments_order_activity"
        layout="@layout/title_bar_white"></include>

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:layout_below="@id/title_payments_order_activity"
        >


    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="@color/my_sumao_background"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingBottom="@dimen/x5"
        android:paddingTop="@dimen/x5"
        android:paddingLeft="@dimen/x5"
        >

        <TextView
            android:id="@+id/product_order_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品订单编号：123456789"
            android:textColor="@color/btn_blue_normal"

            />
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/my_sumao_background"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:background="@color/white">
        <TextView
            android:id="@+id/money_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="支付总金额："
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="@dimen/x5"
            />
        <TextView
            android:id="@+id/money_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="61000"
            android:textColor="@color/red"
            android:textSize="@dimen/x20"
            android:layout_toRightOf="@id/money_tv"
            android:layout_alignParentBottom="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/red"
            android:layout_toRightOf="@id/money_number"
            android:text="元"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/residual_time"
        android:background="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="提示：剩余时间19分"
        android:textColor="@color/red"
        android:layout_marginBottom="@dimen/x5"
        android:layout_marginTop="@dimen/x5"
        android:layout_marginLeft="@dimen/x5"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:layout_marginLeft="@dimen/x5"
        android:layout_marginRight="@dimen/x5"
        android:layout_marginTop="@dimen/x5"
        android:background="@color/my_sumao_background"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/x5"
        android:background="@color/white">
        <TextView
            android:id="@+id/surplus_amount_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:textSize="@dimen/x10"
            android:text="品种："/>
        <TextView
            android:id="@+id/surplus_amount_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_toRightOf="@id/surplus_amount_tv"
            android:textSize="@dimen/x10"
            android:text="LLDPE"/>
        <TextView
            android:id="@+id/purchase_quantity_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:text="产品牌号："
            android:textSize="@dimen/x10"
            android:layout_below="@id/surplus_amount_tv"/>
        <TextView
            android:id="@+id/purchase_quantity_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_toRightOf="@id/purchase_quantity_tv"
            android:text="7045"
            android:textSize="@dimen/x10"
            android:layout_below="@id/surplus_amount_tv"/>
        <TextView
            android:id="@+id/min_variable_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:text="生产企业："
            android:textSize="@dimen/x10"
            android:layout_below="@id/purchase_quantity_tv"/>
        <TextView
            android:id="@+id/min_variable_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_toRightOf="@id/min_variable_tv"
            android:text="中海油"
            android:textSize="@dimen/x10"
            android:layout_below="@id/purchase_quantity_tv"/>
        <TextView
            android:id="@+id/delivery_time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:text="仓库："
            android:textSize="@dimen/x10"
            android:layout_below="@id/min_variable_tv"/>
        <TextView
            android:id="@+id/delivery_time_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/x5"
            android:layout_toRightOf="@id/delivery_time_tv"
            android:text="北京讯邦1库"
            android:textSize="@dimen/x10"
            android:layout_below="@id/min_variable_tv"/>


        <TextView
            android:id="@+id/classification_pre_sale_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品单价(元/吨)："
            android:textSize="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:layout_marginLeft="@dimen/x160"

            />
        <TextView
            android:id="@+id/classification_pre_sale_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x10"
            android:text="6100"
            android:layout_toRightOf="@id/classification_pre_sale_tv"
            android:layout_marginBottom="@dimen/x5"
            />
        <TextView
            android:id="@+id/warehouse_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="数量(吨)："
            android:textSize="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:layout_below="@id/classification_pre_sale_tv"
            android:layout_alignLeft="@id/classification_pre_sale_tv"
            />
        <!--android:layout_toRightOf="@id/delivery_time_et"
            android:layout_marginLeft="@dimen/x35"-->
        <TextView
            android:id="@+id/warehouse_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x10"
            android:text="10"
            android:layout_toRightOf="@id/warehouse_tv"
            android:layout_marginBottom="@dimen/x5"
            android:layout_below="@id/classification_pre_sale_tv"
            />
        <TextView
            android:id="@+id/region_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品总价："
            android:textSize="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:layout_below="@id/warehouse_tv"
            android:layout_alignLeft="@id/classification_pre_sale_tv"
            />
        <TextView
            android:id="@+id/region_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x10"
            android:text="61000"
            android:layout_toRightOf="@id/warehouse_tv"
            android:layout_marginBottom="@dimen/x5"
            android:layout_below="@id/warehouse_tv"
            />
        <TextView
            android:id="@+id/company_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公司："
            android:textSize="@dimen/x10"
            android:layout_marginBottom="@dimen/x5"
            android:layout_below="@id/region_tv"
            android:layout_alignLeft="@id/classification_pre_sale_tv"
            />
        <TextView
            android:id="@+id/company_et"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/x10"
            android:text="四联创业集团"
            android:layout_toRightOf="@id/company_tv"
            android:layout_marginBottom="@dimen/x5"
            android:layout_below="@id/region_tv"
            />

    </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/Layout_Button_Open"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_alignParentBottom="true"

        > <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="3"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        >
        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:layout_marginLeft="@dimen/x20">
            <TextView
                android:id="@+id/total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合计金额："
                android:layout_centerVertical="true"
                />
            <TextView
                android:layout_toRightOf="@id/total_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="61900元"
                android:textSize="@dimen/x15"
                android:textColor="@color/red"
                android:layout_centerVertical="true"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/buy_immediately"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="#0071BC"
            android:textStyle="bold"
            android:text="立即购买"
            android:textSize="16sp"
            />
    </LinearLayout>

    </RelativeLayout>
</RelativeLayout>