<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/selley_lv"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/zixun_topbg"
        >
        <ImageView
            android:id="@+id/img_logistics_title_bar_back_sale_pop"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在售商品查询"
            android:textSize="18sp"
            android:textColor="@color/selley_lv"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:id="@+id/img_logistics_title_bar_search_sale_pop"
            android:layout_width="@dimen/x50"
            android:layout_height="@dimen/x27"
            android:layout_marginRight="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/x17"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x7"
                android:layout_centerVertical="true"
                android:textColor="@color/selley_lv"
                android:text="取消"
                android:textSize="16sp"/>
        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35">
        <EditText
            android:id="@+id/tv_salepop_num"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/juxing"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/x5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_salepop_num"
            android:text="牌号 : "/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35">
        <EditText
            android:id="@+id/tv_salepop_cangku"
            android:layout_width="@dimen/x240"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x20"
            android:background="@drawable/juxing"
            android:gravity="center_vertical"
            android:layout_alignParentRight="true"
            android:paddingLeft="@dimen/x5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_salepop_cangku"
            android:text="仓库 : "/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35">
      <EditText
          android:id="@+id/edt_num_end"
          android:layout_width="@dimen/x100"
          android:layout_height="@dimen/x30"
          android:layout_centerVertical="true"
          android:layout_marginRight="@dimen/x41"
          android:background="@drawable/juxing"
          android:gravity="center_vertical"
          android:layout_alignParentRight="true"
          android:paddingLeft="@dimen/x5" />
        <TextView
            android:id="@+id/tv_num_zhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/edt_num_end"
            android:text=" 至 "
            />
        <EditText
            android:id="@+id/edt_num_start"
            android:layout_width="@dimen/x100"
            android:layout_height="@dimen/x30"
            android:layout_centerVertical="true"
            android:background="@drawable/juxing"
            android:gravity="center_vertical"
            android:layout_toLeftOf="@id/tv_num_zhi"
            android:paddingLeft="@dimen/x5"/>
        <TextView
            android:id="@+id/tv_num_shuliang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/edt_num_start"
            android:text=" 数量 : "
            />
    </RelativeLayout>
    <View
        android:layout_marginTop="@dimen/x3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selley_bg"/>
    <Button
        android:id="@+id/btn_salepop_search"
        android:layout_marginTop="@dimen/x3"
        android:layout_width="@dimen/x140"
        android:layout_height="@dimen/x35"
        android:text="立即查询"
        android:textColor="@color/selley_lv"
        android:gravity="center"
        android:background="@drawable/button_background_blue"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/x10"/>
</LinearLayout>
