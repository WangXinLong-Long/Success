<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:descendantFocusability="blocksDescendants"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/y25"
            android:id="@+id/iv_auction_icon"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_name"
            android:textSize="16sp"
            android:text="燕山石化"
            android:layout_marginLeft="@dimen/x35"
            android:layout_marginTop="@dimen/x10"
            android:textStyle="bold"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_time"
            android:layout_marginTop="@dimen/x13"
            android:textSize="14sp"
            android:text="2016-12-12 12:00"
            android:textColor="#29ABE2"
            android:layout_marginRight="@dimen/x10"
            android:layout_alignParentRight="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="开始时间:"
            android:layout_toLeftOf="@+id/tv_auction_time"
            android:layout_marginTop="@dimen/x13"
            android:layout_marginLeft="@dimen/x5"
            android:textColor="#29ABE2"
            android:id="@+id/tv_auction_start"
            />
        <ImageView
            android:layout_width="@dimen/x70"
            android:layout_height="@dimen/x30"
            android:id="@+id/iv_auction_end"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x5"
            android:layout_marginRight="@dimen/x10"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#d3d3d3"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        ></RelativeLayout>
    <RelativeLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_priceicon"
            android:text="￥"
            android:layout_marginLeft="@dimen/x30"
            android:textColor="#EE2B33"
            android:layout_marginTop="@dimen/x10"
            android:textSize="16sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_price"
            android:text="10000.0"
            android:layout_marginLeft="@dimen/x5"
            android:layout_marginTop="@dimen/x10"
            android:layout_toRightOf="@+id/tv_auction_priceicon"
            android:textSize="16sp"
            android:textColor="#EE2B33"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_number"
            android:text="12345"
            android:layout_toRightOf="@+id/tv_auction_price"
            android:layout_marginLeft="@dimen/x40"
            android:layout_marginTop="@dimen/x10"
            android:textSize="16sp"
            android:textColor="#111"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_ton"
            android:text="吨"
            android:layout_toRightOf="@+id/tv_auction_number"
            android:layout_marginTop="@dimen/x12"
            android:layout_marginLeft="@dimen/x5"
            android:textColor="#111"
            android:textSize="14sp"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x30"
            android:text="团购价格"
            android:layout_below="@+id/tv_auction_price"
            android:layout_marginTop="@dimen/x1"
            android:id="@+id/tv_auction_startPrice"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/tv_auction_startPrice"
            android:layout_below="@+id/tv_auction_number"
            android:text="总量"
            android:layout_marginTop="@dimen/x1"
            android:layout_marginLeft="@dimen/x35"
            />
        <Button
            android:layout_width="@dimen/x80"
            android:layout_height="@dimen/x35"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x20"
            android:text="参与团购"
            android:textColor="#fff"
            android:id="@+id/bt_auctionitem"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#d3d3d3"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x3"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a"
        android:layout_marginTop="@dimen/x5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_group"
            android:text="成团量:"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_group_number"
            android:text="50t"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_auction_group"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv__group_way"
            android:text="交货方式:"
            android:layout_marginLeft="@dimen/x50"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_group_number"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_group_way_value"
            android:text="50t"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv__group_way"
            />



    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a"
        android:layout_marginTop="@dimen/x5">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_werhouse"
            android:text="仓库:"
            android:layout_marginLeft="@dimen/x20"
            android:textSize="12sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_acdress"
            android:text="北京迅邦1号库"
            android:layout_marginLeft="@dimen/x5"
            android:textSize="12sp"
            android:layout_toRightOf="@+id/tv_auction_werhouse"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x3"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_comm"
            android:textSize="12sp"
            android:text="公司:"
            android:layout_marginLeft="@dimen/x20"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_auction_commAdress"
            android:textSize="12sp"
            android:text="东莞市住友塑料有限公司"
            android:layout_toRightOf="@+id/tv_auction_comm"
            android:layout_marginLeft="@dimen/x3"

            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#d3d3d3"
        android:layout_marginLeft="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginTop="@dimen/x3"
        ></RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        >
        <RelativeLayout
            android:id="@+id/relative_endtime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_group_end_time"
                android:text="结束时间:"
                android:textSize="15sp"
                android:textColor="#F7B952"
                />
            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tv_time_end"
                android:textSize="15sp"
                android:textColor="#F7B952"
                android:layout_toRightOf="@+id/tv_group_end_time"
                android:layout_marginLeft="@dimen/x3"
                />
        </RelativeLayout>
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_final_num"
            android:text="最终成团量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_alignParentRight="true"
            android:textColor="#000"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/x5"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="#EEEEF3"></LinearLayout>
</LinearLayout>