<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.homepage.auction.VesselOneActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:id="@+id/layoutTop_vessel_one"
        android:background="#fff"
        >
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:src="@mipmap/my_sumao_back"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/ivBack_vessel_one"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公开竞拍"
            android:layout_marginTop="@dimen/x10"
            android:textSize="18sp"
            android:textColor="#111"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:id="@+id/ivShop_vessel_one"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/gouwuche"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="#EEEEF3"
        android:layout_below="@id/layoutTop_vessel_one"
        android:id="@+id/Line_vessel_one"
        android:orientation="horizontal"
        ></LinearLayout>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        app:tabSelectedTextColor="#28ABE3"
        app:tabIndicatorColor="#28ABE3"
        android:id="@+id/tab_vessel_one"
        android:background="#fff"
        android:layout_below="@+id/Line_vessel_one"

        ></android.support.design.widget.TabLayout>

    <LinearLayout
       android:id="@+id/Layout_Button"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"
        android:weightSum="2"
        android:layout_alignParentBottom="true"
        >
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="#29ABE2"
            android:textStyle="bold"
            android:text="支付保证金"
            android:textSize="16sp"
            android:id="@+id/btZhifu_auction"
            />
        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#fff"
            android:background="#0071BC"
            android:textStyle="bold"
            android:text="立即竞拍"
            android:textSize="16sp"
            />
    </LinearLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_vessel_one"
        android:id="@+id/vp_vessel_one"
        android:layout_above="@+id/Layout_Button"
        ></android.support.v4.view.ViewPager>
</RelativeLayout>
