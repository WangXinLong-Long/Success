<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/selley_lv">
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x5"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:id="@+id/relative_item_seller"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x38">
        <TextView
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_item_seller_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="23"/>
        <ImageView
            android:id="@+id/img_item_seller"
            android:layout_width="@dimen/x18"
            android:layout_height="@dimen/x18"
            android:src="@mipmap/my_sumao_iv_order"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:textColor="@color/orange"
            android:id="@+id/tv_item_seller_xiugai"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toLeftOf="@id/img_item_seller"
            android:text="wre"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_seller_left1"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="分类 : "/>
        <TextView
            android:id="@+id/tv_item_seller_sort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_seller_left1"
            android:text="sdf"/>
        <TextView
            android:id="@+id/tv_item_seller_right1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x170"
            android:layout_centerVertical="true"
            android:text="产品名称 : "/>
        <TextView
            android:id="@+id/tv_item_seller_product_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_seller_right1"
            android:text="fgd"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_seller_left2"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原单价(元/吨) : "/>
        <TextView
            android:id="@+id/tv_item_seller_old_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_seller_left2"
            android:text="sdf"/>
        <TextView
            android:id="@+id/tv_item_seller_right2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/x170"
            android:layout_centerVertical="true"
            android:text="数量(吨) : "/>
        <TextView
            android:id="@+id/tv_item_seller_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_seller_right2"
            android:text="fgd"/>
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_seller_left3"
            android:layout_marginLeft="@dimen/x10"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="新单价(元/吨) : "/>
        <TextView
            android:id="@+id/tv_item_seller_new_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_seller_left3"
            android:text="sdf"/>
    <TextView
        android:id="@+id/tv_item_seller_right3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/x170"
        android:layout_centerVertical="true"
        android:text="产品总价 : "/>
    <TextView
        android:id="@+id/tv_item_seller_product_allprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_item_seller_right3"
        android:text="fgd"/>
</RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/x30">
    <TextView
        android:id="@+id/tv_item_seller_left4"
        android:layout_marginLeft="@dimen/x10"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="仓库 : "/>
    <TextView
        android:id="@+id/tv_item_seller_cangku_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/tv_item_seller_left4"
        android:text="sdf"/>

</RelativeLayout>
</LinearLayout>
