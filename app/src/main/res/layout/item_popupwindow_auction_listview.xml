<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:layout_marginLeft="@dimen/x10"
        android:id="@+id/iv_Bank_icon"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:id="@+id/tv_Bank_name"
        android:layout_toRightOf="@+id/iv_Bank_icon"
        android:layout_marginLeft="@dimen/x5"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:layout_width="@dimen/x20"
        android:layout_height="@dimen/x20"
        android:id="@+id/iv_select_null"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/iv_select_null"
        android:layout_marginRight="@dimen/x20"
        android:text="å…ƒ"
        android:id="@+id/tv_yuan"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/tv_yuan"
        android:layout_marginRight="@dimen/x3"
        android:id="@+id/tv_money"
        android:textColor="@color/red"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/x10"
        android:layout_marginTop="@dimen/x10"

        />



</RelativeLayout>
