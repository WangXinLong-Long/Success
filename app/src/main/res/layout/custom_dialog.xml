<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:orientation="vertical"
    android:padding="@dimen/x20">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/dialog_background"
        android:orientation="vertical"
        android:gravity="center"
        >
        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_title_background"
            android:gravity="center"
            android:textSize="@dimen/x15"
            android:paddingBottom="@dimen/x15"
            android:paddingTop="@dimen/x15"
            android:paddingLeft="@dimen/x30"
            android:paddingRight="@dimen/x30"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/dialog_button_background"
            android:orientation="horizontal">
            <Button
                android:id="@+id/negativeButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textSize="@dimen/x15"
                android:layout_height="wrap_content"
                android:background="@drawable/dialog_left_button_background"
                android:textColor="@color/textColor_expandable_listview_show"
                />
            <Button
                android:id="@+id/positiveButton"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:textSize="@dimen/x15"
                android:background="@drawable/dialog_right_button_background"
                android:textColor="@color/textColor_expandable_listview_show"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>