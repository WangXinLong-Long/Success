        <EditText
            android:id="@+id/edt_item_create_logistics_num"
            android:layout_width="@dimen/x45"
            android:layout_height="@dimen/x25"
            android:background="@drawable/juxing"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="0"
           android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/edt_item_create_logistics_num"
            android:text="本次发货数量"
            android:layout_marginRight="@dimen/x10"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/my_sumao_background"
        android:layout_below="@id/relative_item_create_logistics_bottom"
        />
</RelativeLayout>
