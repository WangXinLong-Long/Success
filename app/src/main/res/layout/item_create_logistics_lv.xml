<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/relative_item_create_logistics_lv_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        >
        <ImageView
            android:id="@+id/img_item_create_logistics_top_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/cart_select_null"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:layout_toRightOf="@id/img_item_create_logistics_top_select"
            android:id="@+id/tv_item_create_logistics_product_top_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"
            android:text="石化"/>
        <ImageView
            android:id="@+id/img_item_create_logistics_top_in"
            android:layout_width="25dp"
            android:layout_height="22dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:src="@mipmap/my_sumao_iv_order"
            android:layout_marginLeft="10dp"
            android:layout_centerVertical="true"/>
        <TextView
            android:id="@+id/tv_item_create_logistics_logistica_top_type"
            android:layout_toLeftOf="@id/img_item_create_logistics_top_in"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="配送房山"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="物流方式 : "
            android:layout_toLeftOf="@id/tv_item_create_logistics_logistica_top_type"/>
    </RelativeLayout>
    <View
        android:id="@+id/line_item_create_logistics_lv"
        android:layout_below="@id/relative_item_create_logistics_lv_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_sumao_background"
        android:layout_marginTop="5dp"
        ></View>
    <LinearLayout
        android:id="@+id/linear_item_create_logistics_message"
        android:visibility="gone"
        android:layout_below="@id/line_item_create_logistics_lv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/create_logistics">
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_sort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="分类 : "
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_sort_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_item_create_logistics_lv_sort"
                android:text="LL"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_product"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品名称 : "
                android:layout_centerVertical="true"
                android:layout_marginLeft="180dp"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_produce_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="石化"
                android:layout_toRightOf="@id/tv_item_create_logistics_lv_product"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="数量 : "
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_num_dun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_item_create_logistics_lv_num"
                android:text="1吨"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_product_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="产品单价（元/吨） : "
                android:layout_centerVertical="true"
                android:layout_marginLeft="180dp"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_produce_price_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="6,100"
                android:layout_toRightOf="@id/tv_item_create_logistics_lv_product_price"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_can"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="可发货数量 : "
                android:layout_marginLeft="10dp"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_can_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_item_create_logistics_lv_can"
                android:text="1吨"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_give_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交货时间 : "
                android:layout_centerVertical="true"
                android:layout_marginLeft="180dp"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_lv_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="2016_06_30"
                android:layout_toRightOf="@id/tv_item_create_logistics_lv_give_date"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp">
        <TextView
            android:id="@+id/tv_item_create_logistics_lv_cangku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="仓库 : "
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/tv_item_create_logistics_lv_cangku_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_create_logistics_lv_cangku"
            android:text="一号库"/>
        </RelativeLayout>
        <View
            android:id="@+id/line_item_create_logistics_four"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/my_sumao_background"
            android:layout_marginTop="5dp"
            ></View>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/relative_item_create_logistics_bottom"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/linear_item_create_logistics_message"
       >
       <TextView
           android:id="@+id/tv_item_create_logistics_lv_add"
           android:layout_width="25dp"
           android:layout_height="25dp"
           android:text="+"
           android:textSize="20sp"
           android:layout_centerVertical="true"
           android:gravity="center"
           android:background="@drawable/cart_num"
           android:layout_alignParentRight="true"
           android:layout_marginRight="10dp"/>
        <EditText
            android:id="@+id/edt_item_create_logistics_num"
            android:layout_width="50dp"
            android:layout_height="25dp"
            android:background="@drawable/juxing"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="0"
            android:layout_toLeftOf="@id/tv_item_create_logistics_lv_add"/>
        <TextView
            android:id="@+id/tv_item_create_logistics_lv_sub"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:text="-"
            android:textSize="20sp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/edt_item_create_logistics_num"
            android:background="@drawable/cart_num"
            android:gravity="center"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_item_create_logistics_lv_sub"
            android:text="本次发货数量"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_sumao_background"
        android:layout_below="@id/relative_item_create_logistics_bottom"
        />
</RelativeLayout>
