<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/selley_bg"
    tools:context="com.silianchuangye.sumao.success.ShangYou.SearchSeePlan">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/zixun_topbg">
        <ImageView
            android:id="@+id/img_search_see_plan_back"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:src="@mipmap/back"/>
        <TextView
            android:textColor="@color/selley_lv"
            android:textSize="15sp"
            android:id="@+id/tv_search_see_plan_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_marginTop="@dimen/x10">
        <ImageView
            android:id="@+id/img_item_search_seeplan_old"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x35"
            android:src="@mipmap/shangyouplan1"
            />
        <TextView
            android:id="@+id/tv_seeplan_left_date_old"
            android:layout_toRightOf="@id/img_item_search_seeplan_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计划日期 : "/>
        <TextView
            android:id="@+id/tv_seeplan_right_date_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2016-1-23"
            android:layout_toRightOf="@id/tv_seeplan_left_date_old"/>
        <TextView
            android:id="@+id/tv_seeplan_left_name_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="产品名称 : "
            android:layout_marginLeft="@dimen/x160"/>
        <TextView
            android:id="@+id/tv_seeplan_right_name_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seeplan_left_name_old"
            android:text="dff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_seeplan_left_cangku_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="仓库 : "/>
        <TextView
            android:id="@+id/tv_seeplan_right_cangku_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_toRightOf="@id/tv_seeplan_left_cangku_old"/>
        <TextView
            android:id="@+id/tv_seeplan_left_num_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="数量 (吨) : "
            android:layout_marginLeft="@dimen/x160"/>
        <TextView
            android:id="@+id/tv_seeplan_right_num_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seeplan_left_num_old"
            android:text="dff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_seeplan_left_peisong_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="配送方式 : "/>
        <TextView
            android:id="@+id/tv_seeplan_right_peisong_old"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="2016-1-23"
            android:layout_toRightOf="@id/tv_seeplan_left_peisong_old"/>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x10"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30"
        android:layout_marginTop="@dimen/x10">
        <ImageView
            android:id="@+id/img_item_search_seeplan"
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x35"
            android:src="@mipmap/shangyouplan2"
            />
        <TextView
            android:id="@+id/tv_seeplan_left_date"
            android:layout_toRightOf="@id/img_item_search_seeplan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="计划日期 : "/>
        <TextView
            android:id="@+id/tv_seeplan_right_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_toRightOf="@id/tv_seeplan_left_date"/>
        <TextView
            android:id="@+id/tv_seeplan_left_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="产品名称 : "
            android:layout_marginLeft="@dimen/x160"/>
        <TextView
            android:id="@+id/tv_seeplan_right_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seeplan_left_name"
            android:text="dff"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_seeplan_left_cangku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="仓库 : "/>
        <TextView
            android:id="@+id/tv_seeplan_right_cangku"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_toRightOf="@id/tv_seeplan_left_cangku"/>
        <TextView
            android:id="@+id/tv_seeplan_left_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="数量 (吨) : "
            android:layout_marginLeft="@dimen/x160"/>
        <TextView
            android:id="@+id/tv_seeplan_right_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seeplan_left_num"
            android:text=""/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_seeplan_left_peisong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="配送方式 : "/>
        <TextView
            android:id="@+id/tv_seeplan_right_peisong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text=""
            android:layout_toRightOf="@id/tv_seeplan_left_peisong"/>
        <TextView
            android:id="@+id/tv_seeplan_left_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="状态 : "
            android:layout_marginLeft="@dimen/x160"/>
        <TextView
            android:id="@+id/tv_seeplan_right_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_seeplan_left_state"
            android:text="dff"/>
    </RelativeLayout>
    <View
        android:id="@+id/line_searchseeplan"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:id="@+id/relative_final"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:id="@+id/tv_seeplan_left_dingdannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x30"
            android:text="订单号 : "/>
        <TextView
            android:id="@+id/tv_seeplan_right_dingdannum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/tv_seeplan_left_dingdannum"
            android:text=""
            android:layout_centerVertical="true"/>
        <Button
            android:id="@+id/btn_seeplan_copy"
            android:layout_width="@dimen/x50"
            android:textColor="#59BEE9"
            android:layout_height="@dimen/x35"
            android:layout_centerVertical="true"
            android:text="复制"
            android:layout_marginRight="@dimen/x10"
            android:layout_alignParentRight="true"
            android:background="@drawable/text_corner"/>
    </RelativeLayout>
</LinearLayout>
