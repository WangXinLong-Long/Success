<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    tools:context=".fragments.homepage.auction.VesselThreeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:id="@+id/layoutTop_vessel_three"
        >
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:src="@mipmap/my_sumao_back"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/ivBack_vessel_three"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="公开竞拍"
            android:layout_marginTop="@dimen/x10"
            android:textSize="18sp"
            android:textColor="#111"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:id="@+id/ivShop_vessel_three"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/gouwuche"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/split_line_vessel_three"
        android:layout_below="@id/layoutTop_vessel_three"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x4"
        android:background="@color/my_sumao_background"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        app:tabSelectedTextColor="#28ABE3"
        app:tabIndicatorColor="#28ABE3"
        android:id="@+id/tab_vessel_three"
        android:layout_below="@id/split_line_vessel_three"
        ></android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tab_vessel_three"
        android:id="@+id/vp_vessel_three"
        ></android.support.v4.view.ViewPager>
</RelativeLayout>


