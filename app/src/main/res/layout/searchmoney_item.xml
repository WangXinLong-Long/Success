<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="@color/selley_lv"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x25">
        <TextView
            android:id="@+id/tv_searchmoney_item"
            style="@style/tv_dingdan"
            android:text="交易流水号 : "
            android:textSize="@dimen/x15"
            />
        <TextView
            android:id="@+id/tv_searchmoney_item_num"
            android:layout_toRightOf="@id/tv_searchmoney_item"
            style="@style/tv_dingdan"
            android:text="124314324324235325235"
            />
        <TextView
            style="@style/tv_dingdan"
            android:text="入金"
            android:layout_alignParentRight="true"
            android:textSize="@dimen/x15"
            android:textColor="@color/textColor_expandable_listview_show"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line_searchmoney"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/selley_bg"
       />
    <RelativeLayout
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20">
        <TextView
            android:id="@+id/tv_searchitem_dingdan"
            style="@style/tv_dingdan"
            android:text="订单号 : "/>
        <TextView
            android:id="@+id/tv_searchitrm_dingdanhao"
            android:layout_toRightOf="@id/tv_searchitem_dingdan"
            style="@style/tv_dingdan"
            android:text="11111111241432432"
            />
        <TextView
            style="@style/tv_dingdan"
            android:text="交易金额 : "
            android:layout_marginRight="@dimen/x70"
            android:layout_alignParentRight="true"
            />
        <TextView
            style="@style/tv_dingdan"
            android:id="@+id/tv_searchitem_money"
            android:layout_alignParentRight="true"
            android:text="345999.00元"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginLeft="@dimen/x15"
        android:layout_marginRight="@dimen/x15"
        android:layout_marginBottom="@dimen/x10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x20">
        <TextView
            style="@style/tv_dingdan"
            android:id="@+id/tv_searchitem_date"
            android:text="交易日期 : "
            />
        <TextView
            android:id="@+id/tv_searchitem_riqi"
            style="@style/tv_dingdan"
            android:layout_toRightOf="@id/tv_searchitem_date"
            android:text="2016-3-3"
            />
        <TextView
            android:id="@+id/tv_searchitem_jiaoyi"
            style="@style/tv_dingdan"
            android:layout_marginRight="@dimen/x70"
            android:layout_alignParentRight="true"
            android:text="交易状态 : "
            />
        <TextView
            style="@style/tv_dingdan"
            android:id="@+id/tv_searchitem_zhuangtai"
            android:text="成功"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x40"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x3"
        android:background="@color/selley_bg"
        />
</LinearLayout>
