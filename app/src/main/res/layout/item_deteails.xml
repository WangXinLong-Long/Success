<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/selley_lv"
    >
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x7"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40">
        <TextView
            android:id="@+id/tv_item_deteails_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="18sp"
            android:textColor="#000"
            android:text="title"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_deteails_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="2013-2-2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_deteails_time1_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="00:00 :"/>
        <TextView
            android:id="@+id/tv_item_deteails_time1_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="right..."
            android:layout_toRightOf="@id/tv_item_deteails_time1_left"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_deteails_time2_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="00:00 :"/>
        <TextView
            android:id="@+id/tv_item_deteails_time2_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="right..."
            android:layout_toRightOf="@id/tv_item_deteails_time2_left"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_item_deteails_name_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="司机姓名 :"
            android:layout_marginLeft="@dimen/x50"/>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/tv_item_deteails_name_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="小商"
            android:layout_toRightOf="@id/tv_item_deteails_name_left"/>
        <TextView
            android:id="@+id/tv_item_deteails_lianxi_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/tv_item_deteails_name_right"
            android:text="联系方式 :"
            android:layout_marginLeft="@dimen/x20"/>
        <TextView
            android:id="@+id/tv_item_deteails_lianxi_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="111111111"
            android:layout_toRightOf="@id/tv_item_deteails_lianxi_left"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_deteails_date2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="2013-2-2"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x30">
        <TextView
            android:id="@+id/tv_item_deteails_time3_left"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:text="00:00 :"/>
        <TextView
            android:id="@+id/tv_item_deteails_time3_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="right..."
            android:layout_toRightOf="@id/tv_item_deteails_time3_left"/>
    </RelativeLayout>
</LinearLayout>
