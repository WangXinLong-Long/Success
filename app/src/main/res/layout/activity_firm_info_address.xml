<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EEEEF3"
    tools:context=".fragments.myPlasticTrade.companyInformations.firmInfomation.FirmInfoAddressActivity">

    <include
        android:id="@+id/layoutTop_address"
        layout="@layout/title_bar"></include>
   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="@dimen/x40"
       android:background="#fff"
       android:layout_marginTop="@dimen/x8"
       android:id="@+id/layout_address"
       >
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tvaddress_firm_info"
           android:text="所在地区"
           android:layout_marginTop="@dimen/x10"
           android:layout_marginLeft="@dimen/x10"
           />
       <ImageView
           android:layout_width="@dimen/x20"
           android:layout_height="@dimen/x20"
           android:id="@+id/ivMore_firm_info_address"
           android:src="@mipmap/my_sumao_iv_order"
           android:layout_alignParentRight="true"
           android:layout_marginTop="@dimen/x10"
           android:layout_marginRight="@dimen/x10"
           />
       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:id="@+id/tvValue_firm_info_address"
           android:layout_toLeftOf="@+id/ivMore_firm_info_address"
           android:text="北京市海淀区大有"
           android:layout_marginTop="@dimen/x10"
           android:layout_marginRight="@dimen/x5"
           />
   </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#fff"
        android:layout_marginTop="@dimen/x8"
        android:id="@+id/layout_aa"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvParticularaddress_firm_info"
            android:text="地址详情"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:id="@+id/ivParticularMore_firm_info_address"
            android:src="@mipmap/my_sumao_iv_order"
            android:layout_alignParentRight="true"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvParticularValue_firm_info_address"
            android:layout_toLeftOf="@+id/ivParticularMore_firm_info_address"
            android:text="大有庄蜈蚣街21号"

            android:layout_marginTop="@dimen/x10"
            android:layout_marginRight="@dimen/x5"
            />
    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/x10"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:background="@drawable/button_background_blue"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="16sp"
        android:id="@+id/btsave_firm_info_address"
        />


</LinearLayout>
