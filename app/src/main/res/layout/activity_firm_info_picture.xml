<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEF3"
    android:id="@+id/layout_a"
    tools:context=".fragments.myPlasticTrade.companyInformations.firmInfomation.FirmInfoPictureActivity">

<include
    android:id="@+id/layoutTop_firm_info_pivtrue"
    layout="@layout/title_bar"></include>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="#fff"
        android:layout_marginTop="@dimen/x5"
        android:layout_below="@id/layoutTop_firm_info_pivtrue"
        android:id="@+id/layoutinfo_firm_info"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvinfo_firm_info_pictrue"
            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="14sp"
            android:textColor="#000"
            />
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:id="@+id/ivMore_firm_info_pictrue"
            android:src="@mipmap/my_sumao_iv_order"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x5"
            android:layout_marginTop="@dimen/x10"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tvinfoValue_firm_info_pictrue"

            android:layout_marginTop="@dimen/x10"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="14sp"
            android:layout_toLeftOf="@+id/ivMore_firm_info_pictrue"

            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x200"
        android:background="#fff"
        android:layout_below="@id/layoutinfo_firm_info"
        android:layout_marginTop="@dimen/x10"
       android:id="@+id/LayoutPictrue"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/iv_firm_info_pictrue"
            android:layout_marginTop="@dimen/x10"
            android:background="#123456"
            >

        </ImageView>
    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_save"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:background="@drawable/button_background_blue"
        android:text="确定"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/x10"

        />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_getNumber"
        android:layout_above="@+id/bt_save"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:background="@drawable/button_background_blue"

        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/x10"

        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bt_save_register_value"
        android:layout_above="@+id/bt_getNumber"
        android:layout_marginRight="@dimen/x10"
        android:layout_marginLeft="@dimen/x10"
        android:background="@drawable/button_background_blue"
        android:text="上传扫描件"
        android:textColor="#fff"
        android:textSize="16sp"
        android:layout_marginBottom="@dimen/x10"

        />

</RelativeLayout>
