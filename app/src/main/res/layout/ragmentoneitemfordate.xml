<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="@dimen/x30"
        android:layout_height="@dimen/y20"
        android:id="@+id/ivfragmenticon"
        android:src="@mipmap/underwey"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvfragmentfordate"
        android:text="8900"
        android:textStyle="bold"
        android:textSize="15dp"
        android:layout_marginLeft="@dimen/x8"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/x20"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:text="元/吨"
        android:layout_marginTop="@dimen/x20"
        android:layout_toRightOf="@+id/tvfragmentfordate"
        android:id="@+id/a"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="北京"
        android:textSize="15sp"
        android:layout_marginTop="@dimen/x20"
        android:layout_marginLeft="@dimen/x3"
        android:textColor="#F68B0E"
        android:id="@+id/tvfragmentforcity"
        android:layout_toRightOf="@id/a"
        android:layout_centerVertical="true"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvFragmentforcom"
        android:textSize="15sp"
        android:layout_marginLeft="@dimen/x3"
        android:text="福建联合"
        android:layout_marginTop="@dimen/x15"
        android:textStyle="bold"
        android:layout_toRightOf="@id/tvfragmentforcity"
        android:layout_marginBottom="@dimen/x15"
        android:maxEms="7"
        android:ellipsize="end"
        android:singleLine="true"

        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_marginTop="@dimen/x22"
        android:layout_marginLeft="@dimen/x3"
        android:text="8900"
        android:textStyle="bold"
        android:id="@+id/tvfragmentfornumber"
        android:layout_toRightOf="@id/tvFragmentforcom"
        android:layout_centerVertical="true"
        />
</RelativeLayout>
