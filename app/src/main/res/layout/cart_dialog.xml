<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selley_lv"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/zixun_topbg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="库存不足"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:textSize="16sp"
            android:textColor="@color/selley_lv"/>
        <ImageView
            android:id="@+id/img_cart_dialog_errey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="5dp"
            android:src="@mipmap/ic_launcher"
            />
    </RelativeLayout>

    <TextView
        android:id="@+id/tv_cart_dailog_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="您购买的商品兰州石化7042库存不足！"
        android:textColor="#ff0000"
        android:layout_marginTop="25dp"
        android:textSize="16sp"/>
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp">
        <TextView
            android:id="@+id/tv_cart_dialog_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前商品共9吨"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/selley_bg"
        />
    <RelativeLayout
        android:layout_marginTop="2dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       >
        <Button
            android:id="@+id/btn_cart_dialog_close"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:text="关闭"
            android:textColor="@color/selley_lv"
            android:gravity="center"
            android:layout_marginTop="5dp"
            android:background="@drawable/cart_read_yuanjiao"
            android:layout_marginBottom="5dp"/>
    </RelativeLayout>
</LinearLayout>
