<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EEEEF3"
    tools:context=".fragments.homepage.auction.VesselTwoActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:id="@+id/layoutTop_vessel_two"
        android:background="#fff"
        >
        <ImageView
            android:layout_width="@dimen/x20"
            android:layout_height="@dimen/x20"
            android:layout_marginTop="@dimen/x15"
            android:src="@mipmap/my_sumao_back"
            android:layout_marginLeft="@dimen/x10"
            android:id="@+id/ivBack_vessel_two"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="交易规则"
            android:layout_marginTop="@dimen/x10"
            android:textSize="18sp"
            android:textColor="#111"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:layout_width="@dimen/x30"
            android:layout_height="@dimen/x30"
            android:id="@+id/ivShop_vessel_two"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x10"
            android:layout_marginTop="@dimen/x10"
            android:src="@mipmap/gouwuche"
            android:visibility="gone"
            />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/Layout_Button_vessel_two"
        android:layout_width="match_parent"
        android:layout_height="@dimen/x50"

        android:layout_alignParentBottom="true"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:orientation="horizontal"
            android:id="@+id/layout_action"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#29ABE2"
                android:textStyle="bold"
                android:text="支付保证金"
                android:textSize="16sp"
                android:id="@+id/btZhifu_auction"
                />
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:textColor="#fff"
                android:background="#0071BC"
                android:textStyle="bold"
                android:text="立即竞拍"
                android:textSize="16sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout_not_action"
            android:orientation="horizontal"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textColor="#fff"
                android:background="#0071BC"
                android:textStyle="bold"
                android:text="支付保证金"
                android:textSize="16sp"
                android:id="@+id/bt_jinpai_colse"
                />
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:id="@+id/layout_action_end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textColor="#6E6E6E"
                android:layout_centerInParent="true"
                android:text="竞拍已结束"
                android:id="@+id/tv_Result"
                />
        </RelativeLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/layoutTop_vessel_two"
        android:background="#EEEEF3"
        android:orientation="vertical"
        android:layout_above="@+id/Layout_Button_vessel_two"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/x1"
            android:background="#EEEEF3"
            ></LinearLayout>
        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/lv_vessel_tow"
            android:scrollbars="none"
            ></ListView>
    </LinearLayout>

</RelativeLayout>
