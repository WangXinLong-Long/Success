<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
   <View
       android:layout_width="match_parent"
       android:layout_height="10dp"
       android:id="@+id/line1_create_logistics"
       android:background="@color/my_sumao_background"/>
    <RelativeLayout
        android:layout_below="@id/line1_create_logistics"
        android:id="@+id/relative_create_logistics_top"
        android:layout_width="match_parent"
        android:layout_height="40dp"
       >
        <TextView
            android:id="@+id/tv_item_create_logistics"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="订单编号 : "
            android:textColor="@color/black_deep"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            />
        <TextView
            android:textSize="16sp"
            android:layout_centerVertical="true"
            android:id="@+id/tv_item_create_logistics_order_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/zixun_topbg"
            android:layout_toRightOf="@id/tv_item_create_logistics"
            />
        <ImageView
            android:id="@+id/img_item_create_logistics_in"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/my_sumao_iv_order"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <View
        android:id="@+id/line_create_logistics"
        android:layout_below="@id/relative_create_logistics_top"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/my_sumao_background"
        ></View>
    <LinearLayout
        android:id="@+id/linear_item_create_logistics_second"
        android:layout_below="@id/line_create_logistics"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_item_create_logistics_order_people"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="下单人 : "
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                />
            <TextView
                android:id="@+id/tv_item_create_logistics_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="sdf"
                android:layout_toRightOf="@id/tv_item_create_logistics_order_people"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_item_create_logistics_riqi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="日期 : "
                android:layout_toRightOf="@id/tv_item_create_logistics_name"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_item_create_logistic_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/tv_item_create_logistics_riqi"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tv_item_create_logistics_company_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="公司"
                android:layout_marginLeft="10dp"/>
            <Button
                android:id="@+id/btn_item_create_logistics_kefu"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="联系客服"
                android:textColor="@color/selley_lv"
                android:background="@drawable/button_background_yellow"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_below="@id/linear_item_create_logistics_second"
        android:layout_width="match_parent"
        android:background="@color/my_sumao_background"
        android:layout_height="1dp"/>
</RelativeLayout>