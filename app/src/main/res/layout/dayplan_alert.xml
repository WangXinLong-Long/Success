<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:background="@color/zixun_topbg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="提交日计划"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"
            android:textSize="16sp"
            android:textColor="@color/selley_lv"/>
        <ImageView
            android:id="@+id/img_margin_dialog_errey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/x5"
            android:src="@mipmap/erroy"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="@dimen/x100"
        android:text="是否提交当前日计划"
        android:gravity="center"
        />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="@dimen/x2"
        android:background="@color/selley_bg"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x40"
        android:layout_marginBottom="@dimen/x3">
        <Button
            android:id="@+id/btn_dayplan_alert_canle"
            android:layout_width="@dimen/x110"
            android:layout_height="wrap_content"
            android:text="取消计划"
            android:background="@drawable/button_background_blue"
            android:layout_marginLeft="@dimen/x20"
            android:textColor="#ffffff"
            />
        <Button
            android:id="@+id/btn_dayplan_alert_tijiao"
            android:layout_width="@dimen/x110"
            android:layout_height="wrap_content"
            android:text="提交计划"
            android:background="@drawable/button_background_green"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x20"
            android:textColor="#ffffff"
            />
    </RelativeLayout>
</LinearLayout>
