<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="@dimen/x36"
    android:background="@color/white"
    android:paddingTop="@dimen/padding_right"
    android:paddingBottom="@dimen/padding_right"
    >
    <ImageView
        android:id="@+id/iv_title_bar_back"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/x20"
        android:src="@mipmap/back"
        android:layout_marginRight="@dimen/x20"
        android:paddingLeft="@dimen/x10"
        android:paddingRight="@dimen/x15"
        android:layout_centerVertical="true"
        />
    <ImageView
        android:id="@+id/iv_title_bar_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iv_title_bar_logo"
        />
    <ImageView
        android:id="@+id/iv_title_bar_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/iv_title_bar_service"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/padding_right"
        android:paddingTop="@dimen/padding_right"
        />
    <RelativeLayout
        android:id="@+id/add_address_rl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:paddingLeft="@dimen/x5"
        android:paddingRight="@dimen/x5"
        android:visibility="invisible"
        >
        <ImageView
            android:id="@+id/add_address"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:src="@mipmap/add_address"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:id="@+id/tvupdate"
            android:layout_below="@id/add_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_address"
            android:textSize="@dimen/x7"
            android:textColor="@color/white"
            />
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tvUpdate"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="3dp"
        android:textColor="#fff"
        />
    <ImageView
        android:id="@+id/iv_title_bar_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/search"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/padding_right"
        android:paddingTop="@dimen/padding_right"
        />

    <Button
        android:id="@+id/sv_title_bar_serachView"
        android:layout_toRightOf="@+id/iv_title_bar_logo"
        android:layout_toLeftOf="@+id/iv_title_bar_service"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:background="@mipmap/search_view"
        android:paddingTop="@dimen/padding_top"
        android:paddingBottom="@dimen/padding_top"
        android:layout_centerInParent="true"
        ></Button>
    <TextView
        android:id="@+id/tv_title_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="@dimen/x20"
        android:layout_centerInParent="true"
        />
</RelativeLayout>