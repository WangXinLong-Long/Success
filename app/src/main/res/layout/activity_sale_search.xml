<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/selley_bg"
    android:orientation="vertical"
    tools:context="com.silianchuangye.sumao.success.salesearch.SaleSearch">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height"
        android:background="@color/zixun_topbg"
        >
        <ImageView
            android:id="@+id/img_logistics_title_bar_back"
            android:layout_width="@dimen/x17"
            android:layout_height="@dimen/x17"
            android:src="@mipmap/back"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x10"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="在售商品查询"
            android:textSize="18sp"
            android:textColor="@color/selley_lv"
            android:layout_centerInParent="true"
            />
        <RelativeLayout
            android:id="@+id/img_logistics_title_bar_search"
            android:layout_width="@dimen/x27"
            android:layout_height="@dimen/x27"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true">
            <ImageView
                android:layout_width="@dimen/x17"
                android:layout_height="@dimen/x17"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/x7"
                android:layout_centerVertical="true"
                android:textColor="@color/selley_lv"
                android:src="@mipmap/search"
                android:textSize="16sp"/>
        </RelativeLayout>

    </RelativeLayout>
    <ListView
        android:layout_marginTop="10dp"
        android:id="@+id/lv_sale_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/selley_lv"></ListView>
</LinearLayout>
