<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/selley_lv"
    android:orientation="vertical">
   <include
       android:id="@+id/top_title_bar"
       layout="@layout/logistics_title_bar"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/title_height">
        <EditText
            android:textSize="14sp"
            android:id="@+id/edt_pop_logistics_product_order_num"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/x27"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x7"
            android:layout_centerVertical="true"
            android:background="@drawable/juxing"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="产品订单编号 : "
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/edt_pop_logistics_product_order_num"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/x5"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35">
        <EditText
            android:textSize="14sp"
            android:id="@+id/edt_pop_logistics_cangku"
            android:layout_width="@dimen/x220"
            android:layout_height="@dimen/x27"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/x7"
            android:layout_centerVertical="true"
            android:background="@drawable/juxing"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="仓库 : "
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/edt_pop_logistics_cangku"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/x5"/>
    </RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/x35">
    <EditText
        android:textSize="14sp"
        android:id="@+id/edt_pop_logistics_product_name"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/x27"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x7"
        android:layout_centerVertical="true"
        android:background="@drawable/juxing"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="产品名称 : "
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/edt_pop_logistics_product_name"
        android:textSize="15sp"
        android:layout_marginRight="@dimen/x5"/>
</RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="@dimen/x35">
    <EditText
        android:textSize="14sp"
        android:id="@+id/edt_pop_logistics_company"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/x27"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x7"
        android:layout_centerVertical="true"
        android:background="@drawable/juxing"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="销售公司 : "
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/edt_pop_logistics_company"
        android:textSize="15sp"
        android:layout_marginRight="@dimen/x5"/>
</RelativeLayout>
    <RelativeLayout
    android:layout_width="match_parent"
        android:layout_height="@dimen/x35">
    <EditText
        android:textSize="14sp"
        android:id="@+id/edt_pop_logistics_order_num"
        android:layout_width="@dimen/x220"
        android:layout_height="@dimen/x27"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x7"
        android:layout_centerVertical="true"
        android:background="@drawable/juxing"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="订单编号 : "
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@id/edt_pop_logistics_order_num"
        android:textSize="15sp"
        android:layout_marginRight="@dimen/x5"/>
</RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/x35">
        <TextView
            android:id="@+id/tv_pop_logistics_end_date"
            android:layout_width="@dimen/x102"
            android:layout_marginRight="@dimen/x7"
            android:layout_alignParentRight="true"
            android:layout_height="@dimen/x27"
            android:background="@drawable/juxing"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"/>
        <TextView
            android:id="@+id/tv_pop_logistics_zhi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="至"
            android:textSize="15sp"
            android:layout_toLeftOf="@id/tv_pop_logistics_end_date"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/x1"
            android:layout_marginRight="@dimen/x1"/>
        <TextView
            android:id="@+id/tv_pop_logistics_start_date"
            android:layout_width="@dimen/x102"
            android:layout_height="@dimen/x27"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/tv_pop_logistics_zhi"
            android:background="@drawable/juxing"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="15sp"
            android:text="交货时间 : "
            android:layout_toLeftOf="@id/tv_pop_logistics_start_date"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x5"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/x1"
        android:background="@color/selley_bg"
        android:layout_marginTop="@dimen/x5"></View>
    <Button
        android:id="@+id/btn_pop_ok"
        android:layout_width="@dimen/x125"
        android:layout_height="@dimen/x37"
        android:layout_marginBottom="10dp"
        android:text="立即查询"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/x10"
        android:textColor="@color/selley_lv"
        android:background="@drawable/button_background_blue"/>
</LinearLayout>
